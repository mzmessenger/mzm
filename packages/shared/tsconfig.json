{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "skipLibCheck": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
