{
  "private": true,
  "name": "mzm-backend",
  "version": "0.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prestart": "npm run cleanbuild",
    "start": "node --env-file=.env --watch dist/src/server.js | bunyan",
    "build": "tsc --build tsconfig.json",
    "build:test": "tsc --build tsconfig.test.json",
    "cleanbuild": "rm -rf dist/ && npm run build",
    "format": "prettier --write src ./*.{js,json}",
    "lint": "eslint -c eslint.config.mjs .",
    "pretest": "concurrently \"npm run lint\" \"npm run build:test\"",
    "test:ci": "vitest run --config=./vitest.config.js",
    "test": "vitest run --config=./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.468.0",
    "@elastic/elasticsearch": "^7.17.0",
    "bunyan": "^1.8.14",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "image-size": "^1.0.2",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.10.0",
    "multer": "^1.4.2",
    "node-schedule": "^2.1.0",
    "undici": "^6.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.7",
    "@types/node-schedule": "^2.1.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
