  "main": "index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/src/server.js | bunyan",
    "build": "tsc --build tsconfig.json",
    "cleanbuild": "rm -rf dist/ && npm run build",
    "format": "prettier --write src ./*.{js,json}",
