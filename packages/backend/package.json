    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "image-size": "^1.0.1",
    "ioredis": "^5.0.6",
    "mongodb": "^4.7.0",
    "multer": "^1.4.2",
    "node-schedule": "^2.1.0",
    "undici": "^5.5.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.28.10",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.42",
