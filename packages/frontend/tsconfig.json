{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es2022", "dom", "dom.iterable", "webworker"],
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react",
    "isolatedModules": true,
    "paths": {
      "mzm-shared": ["../shared"]
    },
    "types": ["vite-plugin-pwa/client"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "references": [{ "path": "../shared" }]
}
