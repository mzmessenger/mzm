{
  "compilerOptions": {
    "incremental": true,
    "lib": ["es2017", "dom", "webworker"],
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "mzm-shared": ["../shared"]
    },
    "types": ["vite-plugin-pwa/client"]
  },
  "exclude": ["node_modules", "**/*.test.ts", "vite.config.ts", "vitest.config.ts"],
  "references": [{ "path": "../shared" }]
}
