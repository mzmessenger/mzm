{
  "private": true,
  "name": "mzm-auth",
  "version": "1.0.1",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prestart": "npm run cleanbuild",
    "start": "node --env-file=.env --watch dist/src/server.js | bunyan",
    "cleanbuild": "rm -rf dist && npm run build",
    "build": "tsc --build tsconfig.json",
    "build:test": "tsc --build tsconfig.test.json",
    "format": "prettier --write src test ./*.{js,json}",
    "lint": "eslint -c eslint.config.mjs src test",
    "pretest": "concurrently \"npm run lint\" \"npm run build:test\"",
    "test": "vitest run --config ./vitest.config.ts",
    "test:ci": "vitest run --config ./vitest.config.ts"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "connect-redis": "^8.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.3.0",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-twitter": "^1.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/cors": "^2.8.13",
    "@types/express-session": "^1.17.5",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.11",
    "@types/passport-github": "^1.1.7",
    "@types/passport-twitter": "^1.0.37",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  }
}
